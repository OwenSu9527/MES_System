{
  // 日誌等級設定
  // Day 17 註解
  //"Logging": {
  //  "LogLevel": {
  //    "Default": "Information",
  //    "Microsoft.AspNetCore": "Warning"
  //  }
  //},

  // 允許的主機
  "AllowedHosts": "*",
  // [Day 17] Serilog 設定
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", // 預設記錄 Information 以上等級
      "Override": {
        "Microsoft": "Warning", // 微軟框架本身的雜訊只記 Warning 以上
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console" // 輸出到控制台
      },
      {
        "Name": "File", // 輸出到檔案
        "Args": {
          "path": "logs/log-.txt", // 檔名格式 (會自動補上日期)
          "rollingInterval": "Day", // 每天換一個檔案
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog" // 使用 JSON 格式存檔
        }
      }
    ]
  },

  // [Day 6 DB First] 連線 SQL Server
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MesDb;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  // [Day 16 JWT Authentication] JWT 設定
  "JwtSettings": {
    "SecretKey": "MySuperSecretKeyForMesSystem2025DoNotShare",
    "Issuer": "MesServer",
    "Audience": "MesClient"
  }
}
