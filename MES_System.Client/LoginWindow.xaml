<Window x:Class="MES_System.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MES 系統登入" Height="300" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="🏭 MES Client" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="帳號 (Username):"/>
            <TextBox x:Name="txtUser" Text="admin" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="密碼 (Password):"/>
            <PasswordBox x:Name="txtPass" Margin="0,5,0,20" Padding="5"/>

            <Button x:Name="btnLogin" Content="登入系統" Height="35" Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>